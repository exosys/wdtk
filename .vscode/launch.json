  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "wx (new)",
      "cwd": "${workspaceFolder}/work",
      "program": "${workspaceFolder}/packages/cli/bin/wx",
      "args": ["new", "sample", "--debug=true"],
      "outputCapture": "std"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "wx (generate)",
      "cwd": "${workspaceFolder}/work/sample",
      "program": "${workspaceFolder}/packages/cli/bin/wx",
      "args": ["generate", "ng-app", "sample"],
      "outputCapture": "std"
    },

    {
      "type": "node",
      "request": "launch",
      "name": "wx (help)",
      "program": "${workspaceFolder}/packages/cli/bin/wx",
      "args": ["help"],
      "outputCapture": "std"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "wx (version)",
      "program": "${workspaceFolder}/packages/cli/bin/wx",
      "args": ["--version"],
      "outputCapture": "std"
    },
    {
      "type": "node",
      "name": "vscode-jest-tests",
      "request": "launch",
      "args": ["--runInBand", "--no-cache"],
      "cwd": "${workspaceFolder}/packages/schematics",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "program": "${workspaceFolder}/node_modules/jest/bin/jest"
    }
  ]
}
